<% include _header %>
<script src="/js/cassa.js"></script>
<div class="page-header">
    <h1>Cassa</h1>
</div>




<form method="post" role="form">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="form-group">
                <label for="id">NUMERO ORDINE</label>
                <input type="text" maxlenght="10" id="id" name="id" placeholder="Numero ordine" required="required" value="<%= +lastOrderID +1 %>" class="form-control" />
                <p>Ultimo ordine:
                    <%= lastOrderID %>
                </p>
            </div>
            <div class="form-group">
                <label for="nome">NOME</label>
                <input class="form-control" type="text" id="nome" name="nome" placeholder="Nome cliente" />
            </div>
            <div class="checkbox">
                <label>
                    <input name="priority" id="priority" type="checkbox" value="priority">Priorit√† (per ordini STAFF inserire 0 (zero) in numero ordine e selezionare questa casella)</label>
            </div>
            <div class="checkbox">
                <label>
                    <input name="takeaway" type="checkbox" value="Take-Away"> Asporto </label>
            </div>
        </div>
        <div class="panel-heading">
            <fieldset>
                <div class="checkbox">
                    <label>
                        <input name="defaultOrder" id="cannavacciuolo" type="checkbox" value="Cannavacciuolo" onclick="cannavacciuoloClicked()">Antonino Cannavacciuolo </label>
                    <label>
                        <input name="defaultOrder" id="borghese" type="checkbox" value="Borghese" onclick="borgheseClicked()">Alessandro Borghese </label>
                    <label>
                        <input name="defaultOrder" id="ramsey" type="checkbox" value="Ramsey" onclick="ramseyClicked()">Gordon Ramsey</label>
                    <label>
                        <input name="defaultOrder" id="baby" type="checkbox" value="Baby" onclick="babyClicked()">Baby Burger</label>
                </div>
            </fieldset>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Condimento principale
                    </h3>
                </div>
                <div class="panel-body">
                    <fieldset>
                        <% config.ingredients[0].primary.forEach((ingredient)=>{ %>
                        <div class="checkbox">
                            <label>
                                <input name="primary" id="<%=ingredient%>" type="radio" onclick="carneClicked()" value="<%=ingredient%>">
                                <%=ingredient%>
                            </label>
                        </div>
                        <%})%>
                        <div class="checkbox">
                            <label>
                                <input name="double" id="Double" type="checkbox" value="Double" onclick="doubleClicked()"> Double</label>
                        </div>
                    </fieldset>
                    <br/>
                </div>
            </div>
        </div>

        <div class="col-md-4">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Farcitura
                    </h3>
                </div>
                <div class="panel-body">
                    <% config.ingredients[0].secondary.forEach((ingredient)=>{ %>
                        <div class="checkbox">
                            <label class="checkbox-inline">
                                <input name="secondary" id="<%=ingredient%>" type="checkbox" onclick="farcituraClicked()" value="<%=ingredient%>">
                                <%=ingredient%>
                            </label>
                        </div>
                    <%})%>
                </div>
            </div>
        </div>

        <div class="col-md-4">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Salse
                    </h3>
                </div>
                <div class="panel-body">
                    <% config.ingredients[0].sauces.forEach((ingredient)=>{ %>
                    <div class="checkbox">
                        <label>
                            <input name="sauces" id="<%=ingredient%>" type="checkbox" value="<%=ingredient%>">
                            <%=ingredient%>
                        </label>
                    </div>
                    <%})%>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>
                Conto Panino
            </h3>
        </div>
        <div class="panel-body">
            <div id="prezzoPanino">
                0 EURO
            </div>
            <input type="hidden" id="totalePanino" name="totalePanino" value="0">
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>BEVANDE</h3>
        </div>
        <div class="panel-body">
            <div class="checkbox">
                <label>
                    <input name="bevanda1" id="bevanda1" type="checkbox" value="Artigianale" onclick="bevandaClicked('bevanda1', 3.5)">Birra Artigianale Bianca alla spina</label>
                <span class="dropup">
               <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
               <span id="dropdown1">0</span>
                    <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li id="bevanda11"><a onclick="dropClicked('dropdown1', 'bevanda11', 3.5)">1</a></li>
