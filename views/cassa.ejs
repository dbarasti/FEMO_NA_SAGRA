<% include _header %>
<script src="/js/cassa.js"></script>
<div class="page-header">
    <h1>Cassa</h1>
</div>

<form method="post" role="form">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="form-group">
                <label for="id">NUMERO ORDINE</label>
                <input type="text" maxlenght="10" id="id" name="id" placeholder="Numero ordine" required="required" value="<%= +lastOrderID +1 %>" class="form-control" />
                <p>Ultimo ordine:
                    <%= lastOrderID %>
                </p>
            </div>
            <div class="checkbox">
                <label>
                    <input name="priority" id="priority" type="checkbox" value="priority">Priorità (per ordini STAFF inserire 0 (zero) in numero ordine e selezionare questa casella)</label>
            </div>
            <div class="checkbox">
                <label>
                    <input name="takeaway" type="checkbox" value="Take-Away"> Asporto </label>
            </div>
        </div>
        <div class="panel-heading">
            <fieldset>
                <div class="checkbox">
                    <%config.defaultBurgers.forEach((defaultBurger)=>{%>
                    <label>
                        <input name="defaultOrder" id="<%=defaultBurger.name%>" type="checkbox" value="<%=JSON.stringify(defaultBurger)%>" onclick="defaultBurgerClicked(<%=JSON.stringify(defaultBurger)%>)"><%=defaultBurger.name%>
                    </label>
                    <%})%>
                </div>
            </fieldset>
        </div>
    </div>
    <div class="row">

        <%config.ingredients.forEach((ingredientType)=>{%>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <%=ingredientType.type%>
                    </h3>
                </div>
                <div class="panel-body">
                    <fieldset>
                        <div class="checkbox">
                            <% ingredientType.list.forEach((ingredient)=>{ %>
                            <label>
                                <%if(ingredientType.type == "Principale"){%>
                                <input name="<%=ingredientType.type%>" id="<%=ingredient%>" type="radio" onclick="primaryClicked()" value="<%=ingredient%>">
                                <%}else{%>
                                <input name="<%=ingredientType.type%>" id="<%=ingredient%>" type="checkbox" onclick="secondaryClicked()" value="<%=ingredient%>">
                                <%}%>
                                <%=ingredient%>
                            </label>
                            <%})%>
                        </div>
                        <%if(ingredientType.type == "Principale"){%>
                            <div class="checkbox">
                                <label>
                                    <input name="double" id="Double" type="checkbox" value="Double" onclick="doubleClicked()"> Double</label>
                            </div>
                        <%}%>

                    </fieldset>
                </div>
            </div>
        </div>
        <%})%>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>
                Conto Panino
            </h3>
        </div>
        <div class="panel-body">
            <div id="prezzoPanino">
                0 €
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>BEVANDE</h3>
        </div>
        <div class="panel-body">
            <%config.beverages.forEach((beverageType)=>{%>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <%=beverageType.type%>
                </div>
                <div class="panel-body">
                    <div class="checkbox">
                        <% beverageType.list.forEach((beverage)=>{%>
                        <label>
                            <input name="beverages" type="checkbox" id="<%=beverage.name%>"  value="<%=JSON.stringify(beverage)%>" onclick="beverageClicked(<%=JSON.stringify(beverage)%>)"><%=beverage.name%>
                        </label>
                        <%})%>
                    </div>
                </div>
            </div>
            <%})%>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Conto Bevande
                    </h3>
                </div>
                <div class="panel-body">
                    <div id="prezzoBevande">
                        0 €
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>
                Totale Ordine
            </h3>
        </div>
        <div class="panel-body">
            <div id="totale">
                0 €
            </div>
        </div>
    </div>
    <center>
        <input type="submit" value="Invia ordine" class="btn btn-primary">
        <div class="text pull-right">
            <a href="/cassa/" class="btn btn-raised btn-danger"> Annulla ordine </a>
        </div>
    </center>
</form>
<% include _footer %>